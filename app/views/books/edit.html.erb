<h1><b>Editing book</b></h1>
<%= form_with model: @book, url:"/books/#{@book.id}/edit", method: :patch do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>
  <br>
  <span>
  <%= link_to "Show", "/books/#{@book.id}" %>
  <%= link_to "Back", "/books" %>
  </span>
<% end %>